<android.support.v7.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout
android:layout_width="match_parent"
android:layout_height="100dp"
android:orientation="horizontal">
<EditText
    android:id="@+id/time"
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:text="9:30"
    android:gravity="center"
    android:textColor="@color/white"
    android:background="@color/monkRed"/>
<LinearLayout
    android:weightSum="2"
    android:id="@+id/publicazione"
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:layout_weight="3"
    android:text="eeeeeeeee"
    android:gravity="center"
    android:orientation="vertical">
    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingTop="2dp"
        android:layout_weight="0.75"
        android:text="Tertulia a tema"
        android:gravity="center"
        android:maxLines="1"/>
    <TextView
        android:id="@+id/descrizione"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.25"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercit"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:gravity="top|start"
        android:scrollbars="vertical"/>
</LinearLayout>
</LinearLayout>
</android.support.v7.widget.CardView>